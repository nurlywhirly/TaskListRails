<div>
  <%= link_to new_task_path do %>
    <div id="new-task-button" class="button"><h3>Click here to create a new task!</h3></div>
  <% end %>
</div>

<div class="row">
  <table class="large-12 small-12 columns">
    <tr>
      <th colspan="3" width="30">
        TO DO
      </th>
    </tr>

    <% @incompleted_tasks.each do |task| %>
    <tr>
      <td><%= "#{ task.name.capitalize}" %></td>
      <td>
        <%= form_tag task_complete_path(task), method: :patch do %>
          <%= submit_tag "Completed!" %>
        <% end %>
      </td>

      <td>
        <%= link_to "[Details]", task_path(task) %>
        <%= link_to "[Edit]", edit_task_path(task) %>
        <%= link_to "[Delete]", task_path(task), method: :delete, data: { confirm: "Don't be a frickin' slacker." } %>
      </td>
    </tr>
    <% end %>
  </table>

  <table class="large-12 small-12 columns">
    <tr>
      <th colspan="2" width="30">
        COMPLETED:
      </th>
    </tr>

    <% @completed_tasks.each do |task| %>
    <tr>
      <td>
        <%= "#{ task.name.capitalize}  (on #{ formatted_date(task) })" %>
      </td>

      <td>
        <%= link_to "[Details]", task_path(task) %>
        <%= link_to "[Edit]", edit_task_path(task) %>
        <%= link_to "[Delete]", task_path(task), method: :delete, data: { confirm: "Nice work gettin' that done!" } %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
