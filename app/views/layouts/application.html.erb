<!DOCTYPE html>
<html>
<head>
  <title>TaskList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Cabin+Condensed|Londrina+Solid" rel="stylesheet">
</head>
<body>
  <header>
    <h1>Task List</h1>
    <nav>
      <% if session[:user_id] %>
      <p><%= link_to "Logout", session_destroy_path %>
      <% else %>
        <%= link_to "Login", "/auth/github" %></p>
      <% end %>
    </nav>
  </header>

  <article class="page-body">
    <%= yield %>
  </article>

  <footer>&copy <%=Time.now.year%></footer>
</body>
</html>
